<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" 
    android:background="@drawable/fundo">
    
    <EditText
        android:id="@+id/cadastroUser_etCPF"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="60dp"
        android:layout_y="40dp"
        android:ems="10"
        android:singleLine="true"
        android:background="@drawable/edittext_rounded"
        android:inputType="numberDecimal"
        android:hint="CPF" />
    

    <EditText
        android:id="@+id/cadastroUser_etNickname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="60dp"
        android:layout_y="90dp"
        android:ems="10"
        android:singleLine="true"
        android:background="@drawable/edittext_rounded"
        android:hint="Login" />

    <EditText
        android:id="@+id/cadastroUser_etSenha"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="60dp"
        android:layout_y="140dp"
        android:ems="10"
        android:singleLine="true"
        android:inputType="textPassword"
        android:background="@drawable/edittext_rounded" 
        android:hint="Senha" />

    <EditText
        android:id="@+id/cadastroUser_etNome"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="60dp"
        android:layout_y="190dp"
        android:ems="10"
        android:singleLine="true"
        android:background="@drawable/edittext_rounded"
        android:hint="Nome completo" />

    <EditText
        android:id="@+id/cadastroUser_etEmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="60dp"
        android:layout_y="240dp"
        android:ems="10"
        android:singleLine="true"
        android:background="@drawable/edittext_rounded"
        android:hint="Email" />

    <EditText
        android:id="@+id/cadastroUser_etTelefone"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="60dp"
        android:layout_y="290dp"
        android:ems="10"
        android:singleLine="true"
        android:background="@drawable/edittext_rounded"
        android:hint="Telefone"
        android:inputType="phone" />

    <Spinner
        android:id="@+id/cadastroUser_spSexo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="60dp"
        android:layout_y="340dp"   
        android:background="@drawable/edittext_rounded"  
        android:prompt="@string/sexo_prompt"/>

    <Button
        android:id="@+id/cadastroUser_btCadastrar"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_x="60dp"
        android:layout_y="400dp"
        android:background="@drawable/button_blue"
        style="@style/button_text"
        android:text="Cadastrar" />

</AbsoluteLayout>